<span class="availability_gps_condition_button">
    {{#warning_edit_required}}
        <strong>{{#str}} warning_edit_required, block_gps {{/str}}</strong>;
    {{/warning_edit_required}}

    {{#str}} position, block_gps {{/str}}

    {{#reveal}}
        <span class="latitude">{{latitude}}</span>,
        <span class="longitude">{{longitude}}</span>
    {{/reveal}}

    {{#str}} within, block_gps {{/str}}
    {{accuracy}} {{accuracylabel}}.


    <span class="distanceok{{#distanceerror}} hidden {{/distanceerror}}">
        {{#str}} distance_your, block_gps {{/str}}
        <span class="distance">{{distance}}</span>
        <span class="distancelabel">{{distancelabel}}</span>.
    </span>

    <span class="distanceerror{{^distanceerror}} hidden {{/distanceerror}}">
        {{#str}} distance_error, block_gps {{/str}}.
    </span>
</span>
